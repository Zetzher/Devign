<section>

    <h2>Editing project</h2>

    <article>
        <div>
            <p>Message Card: {{this.card.message}}</p>
        </div>

        <form action="/project/create" method="post">
        	<input name="id" type="hidden" value={{_id}}>
            <input name="title" type="text" value="{{title}}" required>
            <textarea name="description" type="text" value="{{description}}" required>
            <button type="submit" class="btn btn-success">Save</button>
            <a href="../../random.hbs" class="btn btn-info">Create a new project</a>
        </form>
    </article>
    
</section>